<core:FragmentDefinition
		xmlns="sap.m"
		xmlns:f="sap.ui.layout.form"
		xmlns:core="sap.ui.core">
	<ResponsivePopover
			id="detailsPopover02_1"
			title="{i18n>titleEtapa02_1}"
			icon="sap-icon://download"
			class="sapUiResponsivePadding--header"
			showCloseButton="true"
			placement="Auto">
		<VBox class="sapUiSmallMargin">
 			<Table width="60%" id="TabDetails02_1" items="{ path:'resultados>/results', sorter: { path: 'Contador,Znumber' } }" alternateRowColors="true">
				<columns>
					<Column>
						<header>
							<Text text="Linha" />
						</header>
					</Column>	
					<Column>
						<header>
							<Text text="NÂº Mensagem" />
						</header>
					</Column>															
					<Column hAlign="Center">
						<header>
							<Text text="Mensagem" />
						</header>
					</Column>
				</columns>
				<ColumnListItem vAlign="Middle">
					<Label text="{resultados>Contador}" design="Bold" />
					<Label text="{resultados>Znumber}" />
					<Label text="{resultados>Message}" />
				</ColumnListItem>
			</Table>
		</VBox>
	</ResponsivePopover>
</core:FragmentDefinition>
